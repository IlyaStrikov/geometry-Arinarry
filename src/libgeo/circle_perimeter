#include <cmath>
#include <iostream>

using namespace std;

void per_krug(float x_cir float y_cir, float r, float x1_tr, float y1_tr, float x2_tr, float y2_tr, float x3_tr, float y3_tr)
{
	    float Pi = 3.14, P;
	    P = 2 * r * Pi;
	    cout << "Perimeter of the circle: " << P << endl;
	    return P;
}
